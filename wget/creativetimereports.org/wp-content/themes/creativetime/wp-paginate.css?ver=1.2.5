#pagination .wp-paginate {
	width:960px;
	text-align:center;
	padding: 25px 0 0 0;
	font-size:24px;
}

#pagination .wp-paginate ol,
#pagination .wp-paginate li {
	display:inline;
}

#pagination .wp-paginate a { 
	color: #000;
	padding: 8px 13px 5px;
	text-decoration: none;
}
/* @TODO: jp1971 find a fix that does not require !important tags */
#pagination .wp-paginate a:hover {
	color: #fff !important;
	background-color: red;	
	text-decoration: none !important;
}

#pagination .wp-paginate .title {color:#555; margin-right:4px;}
#pagination .wp-paginate .gap {
	color:#ccc;
}

#pagination .wp-paginate .current {
	color: #fff;
	background-color: red;
	padding: 8px 13px 5px;
	font-size: 24px;
	margin:0 10px;
}

#pagination .wp-paginate .page { 
	margin:0 2.5px;
}

#pagination .wp-paginate .prev {
/*	background: transparent url('../creativetime/images/icons/arrow_page_prev.jpg') no-repeat;	*/
	margin: 0 10px;
}

#pagination .wp-paginate .prev,
#pagination .wp-paginate .next {
/*	background: transparent url('../creativetime/images/icons/arrow_page_next.jpg') no-repeat;	*/
	margin:0 2.5px;
	padding: 8px 13px 5px;
}

/* style overrides for comments pagination */
#pagination .wp-paginate-comments {}
#pagination .wp-paginate-comments li {}
#pagination .wp-paginate-comments a {}
#pagination .wp-paginate-comments a:hover, #pagination .wp-paginate-comments a:active {}
#pagination .wp-paginate-comments .title {}
#pagination .wp-paginate-comments .gap {}
#pagination .wp-paginate-comments .current {}
#pagination .wp-paginate-comments .page {}
#pagination .wp-paginate-comments .prev, #pagination .wp-paginate-comments .next {}

